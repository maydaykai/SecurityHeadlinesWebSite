                                window.open(e.Url, "_blank");
                            }).parent().parent().addClass("portlet");
                        }
                        if (e.Type === 3) {
                            $("#advert-right-second").attr("src", urlPre + e.LargePicture).click(function() {
                                window.open(e.Url, "_blank");
                            }).parent().parent().addClass("portlet");
                        }
                    });
                }, function() {
                    console.log('Error...');
                }).always(function() {
                });
            };

            this.init = function() {
                this.URL = this.getURL();
                this.renderList();
            };
        };

        var TopAd = function(src, smallImg, bigImg) {
            var strTopAd;

            //定义小图片内容
            var topSmallBanner = "<div><a href=\"" + src + "\" target=_blank><img src=\"" + smallImg + "\" /></a></div>";

            //判断在那些页面上显示大图变小图效果，非这些地址只显示小图（或FLASH）
            if (true) {
                //定义大图内容
                strTopAd = "<div id=adimage style=\"width:100%\">" +
                    "<div id=adBig><a href=\"" + src + "\" " +
                    "target=_blank><img " +
                    "src=\"" + bigImg + "\" " +
                    "border=0></a></div>" +
                    "<div id=adSmall style=\"display: none\">";
                strTopAd += topSmallBanner;
                strTopAd += "</div></div>";
            } else {
                strTopAd += topSmallBanner;
            }
            strTopAd += "<div style=\"height:7px; clear:both;overflow:hidden\"></div>";
            return strTopAd;
        };
        var showImage = function() {
            $("#adBig").slideUp(1000, function() { $("#adSmall").slideDown(1000); });
        }
        var event = function() {
            $("#btnSearch").click(function() {
                var txtSearch = $.trim($("#txtSearch").val());
                if (txtSearch == "") return;
                window.location.href = window.location.pathname + "?title=" + txtSearch;
            });
            var id = "@id";
            $("." + id).addClass("active");
        }
        $(function() {
            var app = new EventsList(null, {
                api: '@Url.Action("GetList", "Article")/@id',
                params: {
                    start: 1,
                    type: 'music',
                    count: 10
                }
            });
            event();
            app.init();
            var banner = new Banner();
            banner.init();
            var advert = new Advert();
            advert.init();
            setTimeout(function() { showImage(); }, 2000);
        });
    })(window.jQuery);
</script>
