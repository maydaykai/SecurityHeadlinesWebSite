<script src="~/assets/amazeui/js/handlebars.min.js"></script>
@{
    var id = @ViewData["Id"];
}
<script type="text/x-handlebars-template" id="tpi-list-item">
    {{#each this}}
    <div class="item-inner">
        {{#imgLengthHelper imgs}}
        <div class="rbox" style="margin-left:20px;">
            {{else}}
            <div class="lbox left">
                <a ga_event="click_feed_newsimg" href="@Url.Action("Detail", "Article")/{{id}}" target="_blank">
                    <img class="feedimg" src="{{imgHelper imgs}}" onload="this.style.opacity = 1;" style="opacity: 1;">
                </a>
            </div>
            <div class="rbox">
                {{/imgLengthHelper}}
                <div class="rbox-inner">
                    <div class="title-box">
                        <a ga_event="click_feed_newstitle" class="link title" href="@Url.Action("Detail", "Article")/{{id}}" target="_blank" data-node="title">
                            {{title}}
                        </a>
                    </div>
                    {{#imgLengthHelper imgs}}
                    <div class="abstract" style="max-height:86px;">
                        <div class="left" style="width: 100%;position: relative;">
                            <a class="left" style="margin-right: 20px;" ga_event="click_feed_newsimg" href="@Url.Action("Detail", "Article")/{{id}}" target="_blank">
                                <img class="feedimg" src="{{imgHelper imgs 0}}" onload="this.style.opacity=1;" style="opacity: 1;height:120px;">
                            </a>
                            <a class="left" style="margin-right: 20px;" ga_event="click_feed_newsimg" href="@Url.Action("Detail", "Article")/{{id}}" target="_blank">
                                <img class="feedimg" src="{{imgHelper imgs 1}}" onload="this.style.opacity=1;" style="opacity: 1;height:120px;">
                            </a>
                            <a class="left" style="margin-right: 20px;" ga_event="click_feed_newsimg" href="@Url.Action("Detail", "Article")/{{id}}" target="_blank">
                                <img class="feedimg" src="{{imgHelper imgs 2}}" onload="this.style.opacity=1;" style="opacity: 1;height:120px;">
                            </a>
                        </div>
                    </div>
                    {{else}}
                    <div class="abstract">
                        <a ga_event="click_feed_newsabstract" class="link" href="@Url.Action("Detail", "Article")/{{id}}">{{content}}</a>
                    </div>
                    {{/imgLengthHelper}}
                    <div class="footer">
                        <div class="left lfooter">
                            <span class="lbtn comment">{{source}}&nbsp;⋅</span>
                            <span class="lbtn comment">{{commentCount}}评论&nbsp;⋅</span>
                            <span class="lbtn time">{{dateHelper pubTime}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</script>
<script type="text/x-handlebars-template" id="banner-list">
    <!-- Indicators -->
    <ol class="carousel-indicators">        
        {{#each this}}
        <li data-target="#carousel-example-generic" data-slide-to="{{@@index}}" {{#if @@first}}class="active"{{/if}}></li>   
        {{/each}}
    </ol>    
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">        
        {{#each this}}
        <div class="item{{#if @@first}} active{{/if}}">
            <img src="http://www.aftop.cn:8088/img/{{LargePicture}}">
            <div class="carousel-caption">
            </div>
        </div>   
        {{/each}}
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</script>
<script src="~/assets/amazeui/js/amazeui.min.js"></script>
<script>
    (function($) {
        var EventsList = function(element, options) {
            var $main = $('#wrapper');
            var $list = $main.find('#pagelet-nfeedlist');
            //var $pullDown = $main.find('#pull-down');
            var $pullUp = $main.find('#pull-up');
            //var topOffset = -$pullDown.outerHeight();

            this.compiler = Handlebars.compile($('#tpi-list-item').html());
            Handlebars.registerHelper("imgHelper", function(value, num) {
                if (!value)
                    return "";
                var imgs = value.split(',');
                if (!(num === +num)) num = 0;
                return imgs[num];
            });
            Handlebars.registerHelper("imgLengthHelper", function (value, options) {
                if (!value)
                    return options.inverse(this);
                var imgs = value.split(',');
                return imgs.length > 2 ? options.fn(this) : options.inverse(this);
            });
            Handlebars.registerHelper("dateHelper", function (value) {
                var date = new Date(parseInt(value.replace("/Date(", "").replace(")/", "")));
                Date.prototype.format = function (format) {
                    var o = {
                        "M+": this.getMonth() + 1, //month
                        "d+": this.getDate(), //day
                        "h+": this.getHours(), //hour
                        "m+": this.getMinutes(), //minute
                        "s+": this.getSeconds(), //second
                        "q+": Math.floor((this.getMonth() + 3) / 3), //quarter
                        "S": this.getMilliseconds() //millisecond
                    }

                    if (/(y+)/.test(format)) {
                        format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
                    }

                    for (var k in o) {
                        if (new RegExp("(" + k + ")").test(format)) {
                            format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
                        }
                    }
                    return format;
                }
                return date.format("MM-dd hh:mm");
            });
            this.prev = this.next = this.start = options.params.start;
            this.total = null;

            this.getURL = function(params) {
                var queries = [];
                for (var key in params) {
                    if (key !== 'start') {
                        queries.push(key + '=' + params[key]);
                    }
                }
                queries.push('page=');
                var title = this.GetQueryString("title");
                if (title != null) {
                    $("#txtSearch").val(decodeURI(title));
                    return options.api + '?title=' + title + "&" + queries.join('&');
                }
                return options.api + '?' + queries.join('&');
            };

            this.renderList = function(start, type) {
                var _this = this;
                $.getJSON(this.URL + start).then(function(data) {
                    console.log(data);
                    _this.total = data.total;
                    var html = _this.compiler(data.list);
                    if (type === 'refresh') {
                        $list.children('li').first().before(html);
                    } else if (type === 'load') {
                        $list.append(html);
                    } else {
                        $list.html(html);
                    }
                }, function() {
                    console.log('Error...');
                }).always(function() {
                });
            };

            this.setLoading = function($el) {
                $el.addClass('loading');
            };

            this.resetLoading = function($el) {
                $el.removeClass('loading');
            };

            this.init = function() {
                var _this = this;

                this.URL = this.getURL(options.params);
                this.renderList(options.params.start);
                $pullUp.on("click", function () {
                    if (_this.next < _this.total) {
                        _this.next += 1;
                        _this.renderList(_this.next, 'load');
                    } else {
                        alert("没有更多了");
                    }
                });
            };

            this.GetQueryString = function (name) {
                var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
                var r = window.location.search.substr(1).match(reg);
                if (r != null) return (r[2]); return null;
            }
        };
        var Banner = function () {
            var $main = $('#banner');
            var $list = $main.find('#carousel-example-generic');

            this.compiler = Handlebars.compile($('#banner-list').html());
            this.getURL = function () {
                return '@Url.Action("GetBannerList", "Article")';
            };
            this.renderList = function (start, type) {
                var _this = this;
                $.getJSON(this.URL).then(function (data) {
                    console.log(data);
                    var html = _this.compiler(data.list);
                    $list.html(html);
                }, function () {
                    console.log('Error...');
                }).always(function () {
                });
            };

            this.init = function () {
                this.URL = this.getURL();
                this.renderList();
            };
        };
        var Advert = function () {
            this.getURL = function () {
                return '@Url.Action("GetAdvertList", "Article")';
            };
            this.renderList = function (start, type) {
                $.getJSON(this.URL).then(function (data) {
                    console.log(data);
                    var urlPre = "http://www.aftop.cn:8088/img/";
                    $.each(data.list,function(i, e) {
                        if (e.Type === 1) {
                            //$("#advert-middle").attr("src", urlPre + e.LargePicture).click(function () {
                            //    window.open(e.Url,"_blank");
                            //})
                            this.html = TopAd(e.Url, urlPre + e.SmallPicture, urlPre + e.LargePicture);
                            $("#advert-middle").html(this.html);
                        }
                        if (e.Type === 2) {
                            $("#advert-right-first").attr("src", urlPre + e.LargePicture).click(function() {
                                window.open(e.Url, "_blank");
                            }).parent().parent().addClass("portlet light");
                        }
                        if (e.Type === 3) {
                            $("#advert-right-second").attr("src", urlPre + e.LargePicture).click(function () {
                                window.open(e.Url, "_blank");
                            }).parent().parent().addClass("portlet light");
                        }
                    });
                }, function () {
                    console.log('Error...');
                }).always(function () {
                });
            };

            this.init = function () {
                this.URL = this.getURL();
                this.renderList();
            };
        };

        var TopAd = function (src, smallImg, bigImg) {
            var strTopAd;

            //定义小图片内容
            var topSmallBanner = "<div><a href=\"" + src + "\" target=_blank><img src=\"" + smallImg + "\" /></a></div>";

            //判断在那些页面上显示大图变小图效果，非这些地址只显示小图（或FLASH）
            if (true) {
                //定义大图内容
                strTopAd = "<div id=adimage style=\"width:980px\">" +
                    "<div id=adBig><a href=\"" + src + "\" " +
                    "target=_blank><img " +
                    "src=\"" + bigImg + "\" " +
                    "border=0></a></div>" +
                    "<div id=adSmall style=\"display: none\">";
                strTopAd += topSmallBanner;
                strTopAd += "</div></div>";
            } else {
                strTopAd += topSmallBanner;
            }
            strTopAd += "<div style=\"height:7px; clear:both;overflow:hidden\"></div>";
            return strTopAd;
        };
        var showImage = function () {
            $("#adBig").slideUp(1000, function () { $("#adSmall").slideDown(1000); });
        }
        $(function() {
            var app = new EventsList(null, {
                api: '@Url.Action("GetList", "Article")/@id',
                params: {
                    start: 1,
                    type: 'music',
                    count: 10
                }
            });
            app.init();
            var banner = new Banner();
            banner.init();
            var advert = new Advert();
            advert.init();
            setTimeout(function() { showImage(); }, 2000);
        });
    })(window.jQuery);
</script>
