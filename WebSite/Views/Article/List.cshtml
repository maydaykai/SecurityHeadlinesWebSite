<script type="text/x-handlebars-template" id="banner-list">
    <!-- Indicators -->
    <ol class="carousel-indicators">        
        {{#each this}}
        <li data-target="#carousel-example-generic" data-slide-to="{{@@index}}" {{#if @@first}}class="active"{{/if}}></li>   
        {{/each}}
    </ol>    
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">        
        {{#each this}}
        <div class="item{{#if @@first}} active{{/if}}">
            <img src="http://www.aftop.cn:8088/img/{{LargePicture}}">
            <div class="carousel-caption">
            </div>
        </div>   
        {{/each}}
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</script>
<script src="~/assets/amazeui/js/amazeui.min.js"></script>
<script>
    (function($) {
        var EventsList = function(element, options) {
            var $main = $('#wrapper');
            var $list = $main.find('#pagelet-nfeedlist');
            //var $pullDown = $main.find('#pull-down');
            var $pullUp = $main.find('#pull-up');
            //var topOffset = -$pullDown.outerHeight();

            this.compiler = Handlebars.compile($('#tpi-list-item').html());
            Handlebars.registerHelper("imgHelper", function (value) {
                if (!value)
                    return "";
                var imgs = value.split(',');
                return imgs[0];
            });
            Handlebars.registerHelper("dateHelper", function (value) {
                var date = new Date(parseInt(value.replace("/Date(", "").replace(")/", "")));
                Date.prototype.format = function (format) {
                    var o = {
                        "M+": this.getMonth() + 1, //month
                        "d+": this.getDate(), //day
                        "h+": this.getHours(), //hour
                        "m+": this.getMinutes(), //minute
                        "s+": this.getSeconds(), //second
                        "q+": Math.floor((this.getMonth() + 3) / 3), //quarter
                        "S": this.getMilliseconds() //millisecond
                    }

                    if (/(y+)/.test(format)) {
                        format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
                    }

                    for (var k in o) {
                        if (new RegExp("(" + k + ")").test(format)) {
                            format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
                        }
                    }
                    return format;
                }
                return date.format("MM-dd hh:mm");
            });
            this.prev = this.next = this.start = options.params.start;
            this.total = null;

            this.getURL = function(params) {
                var queries = [];
                for (var key in params) {
                    if (key !== 'start') {
                        queries.push(key + '=' + params[key]);
                    }
                }
                queries.push('page=');
                return options.api + '?' + queries.join('&');
            };

            this.renderList = function(start, type) {
                var _this = this;
                $.getJSON(this.URL + start).then(function(data) {
                    console.log(data);
                    _this.total = data.total;
                    var html = _this.compiler(data.list);
                    if (type === 'refresh') {
                        $list.children('li').first().before(html);
                    } else if (type === 'load') {
                        $list.append(html);
                    } else {
                        $list.html(html);
                    }
                }, function() {
                    console.log('Error...');
                }).always(function() {
                });
            };

            this.setLoading = function($el) {
                $el.addClass('loading');
            };

            this.resetLoading = function($el) {
                $el.removeClass('loading');
            };

            this.init = function() {
                var _this = this;

                this.URL = this.getURL(options.params);
                this.renderList(options.params.start);
                $pullUp.on("click", function () {
                    if (_this.next < _this.total) {
                        _this.next += 1;
                        _this.renderList(_this.next, 'load');
                    } else {
                        alert("没有更多了");
                    }
                });
            };
        };
        var Banner = function () {
            var $main = $('#banner');
            var $list = $main.find('#carousel-example-generic');

            this.compiler = Handlebars.compile($('#banner-list').html());
            this.getURL = function () {
                return '@Url.Action("GetBannerList", "Article")';
            };
            this.renderList = function (start, type) {
                var _this = this;
                $.getJSON(this.URL).then(function (data) {
                    console.log(data);
                    var html = _this.compiler(data.list);
                    $list.html(html);
                }, function () {
                    console.log('Error...');
                }).always(function () {
                });
            };

            this.init = function () {
                this.URL = this.getURL();
                this.renderList();
            };
        };
        var Advert = function () {
            this.getURL = function () {
                return '@Url.Action("GetAdvertList", "Article")';
            };
            this.renderList = function (start, type) {
                $.getJSON(this.URL).then(function (data) {
                    console.log(data);
                    var urlPre = "http://www.aftop.cn:8088/img/";
                    $.each(data.list,function(i, e) {
                        if (e.Type === 1) {
                            $("#advert-middle").attr("src", urlPre + e.LargePicture).click(function () {
                                window.open(e.Url,"_blank");
                            })
                        }
                        if (e.Type === 2) {
                            $("#advert-right-first").attr("src", urlPre + e.LargePicture).click(function() {
                                window.open(e.Url, "_blank");
                            }).parent().parent().addClass("portlet light");
                        }
                        if (e.Type === 3) {
                            $("#advert-right-second").attr("src", urlPre + e.LargePicture).click(function () {
                                window.open(e.Url, "_blank");
                            }).parent().parent().addClass("portlet light");
                        }
                    });
                }, function () {
                    console.log('Error...');
                }).always(function () {
                });
            };

            this.init = function () {
                this.URL = this.getURL();
                this.renderList();
            };
        };
        $(function() {
            var app = new EventsList(null, {
                api: '@Url.Action("GetList", "Article")/@id',
                params: {
                    start: 1,
                    type: 'music',
                    count: 10
                }
            });
            app.init();
            var banner = new Banner();
            banner.init();
            var advert = new Advert();
            advert.init();
        });
    })(window.jQuery);
</script>
