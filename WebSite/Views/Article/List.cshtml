@model System.Collections.Generic.List<Model.ArticleModel>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #wrapper {
        top: 49px;
        bottom: 0;
        overflow: hidden;
        margin: 0;
        width: 100%;
        padding: 0 8px;
        background-color: #f8f8f8;
    }
    .pull-action {
        text-align: center;
        height: 45px;
        line-height: 45px;
        color: #999;
    }

    .pull-action .am-icon-spin {
        display: none;
    }

    .pull-action.loading .am-icon-spin {
        display: block;
    }

    .pull-action.loading .pull-label {
        display: none;
    }
</style>
