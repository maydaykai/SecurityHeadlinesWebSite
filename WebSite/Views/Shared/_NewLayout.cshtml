    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script>
    // 手机号码验证
    jQuery.validator.addMethod("isMobile", function (value, element) {
        var length = value.length;
        var mobile = /^(13[0-9]{9})|(18[0-9]{9})|(14[0-9]{9})|(17[0-9]{9})|(15[0-9]{9})$/;
        return this.optional(element) || (length == 11 && mobile.test(value));
    }, "请正确填写您的手机号码");
    var Register = function() {

        var handleRegister = function () {
            $('#submit_form').validate({
                errorElement: 'span', //default input error message container
                errorClass: 'help-block', // default input error message class
                focusInvalid: false, // do not focus the last invalid input
                rules: {
                    phone: {
                        required: true,
                        minlength: 11,
                        isMobile: true
                    },
                    password: {
                        required: true,
                        rangelength: [6, 12]
                    },
                    confirm_password: {
                        equalTo: "#password"
                    },
                    email: {
                        required: false
                    }
                },

                messages: {
                    phone: {
                        required: "phone is required.",
                        minlength: "确认手机不能小于11个字符",
                        isMobile: "请正确填写您的手机号码"
                    },
                    password: {
                        required: "password is required.",
                        rangelength: "密码最小长度:6, 最大长度:12。"
                    },
                    confirm_password: {
                        equalTo: "两次密码输入不一致"
                    },
                    email: {
                        required: "email is required."
                    }
                },

                invalidHandler: function(event, validator) { //display error alert on form submit
                    //$('.alert-danger', $('#submit_form')).show();
                },

                highlight: function(element) { // hightlight error inputs
                    $(element)
                        .closest('.form-group').addClass('has-error'); // set error class to the control group
                },

                success: function(label) {
                    label.closest('.form-group').removeClass('has-error');
                    label.remove();
                },

                errorPlacement: function(error, element) {
                    error.insertAfter(element.closest('.col-md-6'));
                },

                submitHandler: function(form) {
                    $('.alert-info').show();
                    $('.alert-danger').hide();
                    $('#btn_reg').attr("disabled", "disabled");
                    $.post('/Account/Register', {
                            username : $.trim($("#phone").val()),
                            password : $.trim($("#password").val()),
                            email : $.trim($("#email").val())
                        },
                        function(data) {
                            if (data.type == "1") {
                                window.location = data.value ? data.value : "/Article/Index";
                            } else {
                                $('.alert-danger').find("span").text(data.message);
                                $('.alert-danger').show();
                                $('#btn_reg').removeAttr("disabled");
                            }
                            $('.alert-info').hide();
                        }, "json");
                }
            });
        }
        return {
            //main function to initiate the module
            init: function() {
                handleRegister();
            }
        };

    }();

    $(function() {
        Register.init();
    });
    </script>
